<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sam_boncel.kalkulatorgizi.PilihMakananActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_seacrh"
                android:layout_gravity="center_vertical"
                />
            <!--<TextView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content" -->
                <!--android:text="Pencarian"-->
                <!--android:textAlignment="center"-->
                <!--android:textSize="14dp"-->
                <!--/>-->
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/search"
                android:hint="Pencarian"/>
        </LinearLayout>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="430dp"
            android:id="@+id/listViewaa"/>
        <Button
            android:id="@+id/btnProses"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/btnsingin"
            android:onClick="btn_onClick"
            android:text="SIMPAN"
            android:textColor="#fff"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginLeft="65dp"/>
    </LinearLayout>
</RelativeLayout>
